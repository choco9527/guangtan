    <form bindsubmit="formsubmit">
        <van-cell-group inset>

            <van-cell title="头像">
                <view>
                    <button class="avatar-wrapper-btn" open-type="chooseAvatar"
                            bind:chooseavatar="onChooseAvatar">
                        <van-image
                                wx:if="{{avatarUrl}}"
                                round
                                width="80px"
                                height="80px"
                                src="{{avatarUrl}}"
                        />
                        <text class="fs-10" wx:else>设置头像</text>
                    </button>

                </view>
            </van-cell>

            <van-cell title="昵称">
                <input type="nickname" placeholder="请输入昵称" name="nickname" value="{{nickname}}"/>
            </van-cell>
        </van-cell-group>

        <button form-type="submit" type="primary">提交</button>
    </form>

</view>

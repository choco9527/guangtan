<view class="user-page">

    <van-cell-group inset>
        <van-cell title="头像">
            <view>
                <button class="wrapper-btn" open-type="chooseAvatar"
                        bind:chooseavatar="onChooseAvatar">
                    <van-image
                            wx:if="{{info.avatar}}"
                            round
                            width="40px"
                            height="40px"
                            src="{{info.avatar}}"
                    />
                    <text class="fs-12" wx:else>设置头像</text>
                </button>
            </view>
        </van-cell>
        <van-cell title="昵称" value="{{info.nickname }}">
            <text wx:if="{{info.nickname}}">{{info.nickname}}</text>
            <text class="fs-12" wx:else bind:tap="showDialog">设置昵称</text>
        </van-cell>
        <van-cell wx:if="{{info.isManager}}" title="审核列表" url="/pages/audit/index" is-link/>
    </van-cell-group>
    <van-dialog
            use-slot
            title="设置昵称"
            show="{{ show }}"
            showConfirmButton="{{false}}"
            closeOnClickOverlay
            transition="fade"
            custom-class="nick-dialog"
    >
        <form bindsubmit="formsubmit">
            <input class="sub-input" type="nickname" placeholder="请输入新昵称，暂不提供修改" name="nickname"/>
            <button class="sub-btn" form-type="submit" type="primary">提交</button>
        </form>
    </van-dialog>
    <van-notify id="van-notify" />
</view>
